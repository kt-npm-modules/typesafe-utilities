{
	"compilerOptions": {
		"lib": ["es2023"],
		"target": "es2022",
		"module": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "coverage"]
}
